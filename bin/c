#!/usr/bin/bash

if ! command -v cht.sh &>/dev/null; then
  echo "cht.sh not installed or found"
  exit 1
fi
OUTPUT=$(cht.sh "$@")
case "$OUTPUT" in
  Unknown?topic.*)
    echo "$OUTPUT"
    exit 1
    ;;
  *404*NOT*FOUND*Unknown*cheat*sheet.*)
    echo "$OUTPUT"
    exit 1
    ;;
  *)
    nl -b a -s " â”‚ " <<<"$OUTPUT" | less -r -x 2 -i
    ;;
esac
