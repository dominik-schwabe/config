#!/usr/bin/env bash

declare -A PROGRAMS=(
  ["uv"]='curl -LsSf https://astral.sh/uv/install.sh | UV_NO_MODIFY_PATH=1 sh'
  ["mise"]='curl https://mise.run | sh'
  ["trans"]='curl --create-dirs -sfLo ~/.toolbin/trans https://git.io/trans && chmod 755 ~/.toolbin/trans'
  ["chtsh"]='curl --create-dirs -sfLo ~/.toolbin/cht.sh https://cht.sh/:cht.sh && chmod 755 ~/.toolbin/cht.sh'
  ["tldr"]='npm install -g tldr'
  ["rust"]='curl --proto "=https" --tlsv1.2 https://sh.rustup.rs -sSf | sh -s -- -y --no-modify-path --default-toolchain stable'
  ["binstall"]='curl -L --proto "=https" --tlsv1.2 -sSf https://raw.githubusercontent.com/cargo-bins/cargo-binstall/main/install-from-binstall-release.sh | bash'
)

if [[ "$@" != "" ]]; then
  echo "${PROGRAMS[$@]}"
  sh -c "${PROGRAMS[$@]}"
else
  for E in "${!PROGRAMS[@]}"; do
    echo $E
  done
fi
