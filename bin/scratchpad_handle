#!/usr/bin/env bash

HELP="move a window from/to the scratchpad in i3wm
the -i, -c, -t options are optional but at least one has to be present
  -h help
  -i window instance
  -c window class
  -t window title
  -n add next selector option (-i, -t, -c) only to i3 selector (use when next option is regex)
  -p program to execute if window does not exist (e.g. start the window program)
  -s size of the window in ppt"

ADDTITLE=true
ADDINSTANCE=true
ADDCLASS=true

ADDNEXT=true
while getopts "i:c:t:s:p:nh" o &> /dev/null
do
  case $o in
    "h") echo "$HELP"
         exit
         ;;
    "i") INSTANCE=$OPTARG
         ADDINSTANCE=$ADDNEXT
         ;;
    "c") CLASS=$OPTARG
         ADDCLASS=$ADDNEXT
         ;;
    "t") TITLE=$OPTARG
         ADDTITLE=$ADDNEXT
         ;;
    "s") SIZE=$OPTARG;;
    "p") PROGRAM=$OPTARG;;
    "n") ADDNEXT=false
         continue
         ;;
  esac
  ADDNEXT=true
done

SELECT=""
SELECTOR=""

add_select_arg() {
  if [[ -n $4 ]]; then
    [[ -n $SELECT && $3 == true ]] && SELECT="$SELECT and "
    [[ -n $SELECTOR ]] && SELECTOR="$SELECTOR "
    if [[ $3 == true ]]; then
      export SELECT="${SELECT}.${1}? == \"${4}\""
    fi
    export SELECTOR="${SELECTOR}${2}=\"${4}\""
  fi
}

add_select_arg name title $ADDTITLE "$TITLE"
add_select_arg class class $ADDCLASS "$CLASS"
add_select_arg instance instance $ADDINSTANCE "$INSTANCE"

[[ -z $SELECT ]] && {
  echo "$HELP"
  exit
}
SELECTOR="[$SELECTOR]"

EXISTS_QUERY=".. | select($SELECT) | .id"
IS_SCRATCH_QUERY='.. | select(.name? == "__i3_scratch") | '$EXISTS_QUERY

TREE=$(i3-msg -t get_tree)
if [[ $(echo $TREE | jq "$EXISTS_QUERY") ]]; then
  if [[ $(echo $TREE | jq "$IS_SCRATCH_QUERY") ]]; then
    i3-msg "$SELECTOR scratchpad show; $SELECTOR resize set width $SIZE ppt height $SIZE ppt; $SELECTOR move position center" &>/dev/null
  else
    i3-msg "$SELECTOR move scratchpad" &>/dev/null
  fi
else
  if [[ $PROGRAM ]]; then
    eval "$PROGRAM" &!
  fi
fi
