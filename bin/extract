#!/usr/bin/env bash

SILENT=false
while getopts "s" o &>/dev/null; do
  case $o in
    "s") SILENT=true ;;
  esac
done

error() {
  [[ "$SILENT" == true ]] || echo "$1" >/dev/stderr
  exit 1
}

shift "$(($OPTIND - 1))"
FILE=$1

if [ -z "$FILE" ]; then
  error "no file given"
elif ! [ -f "$FILE" ]; then
  error "'$FILE' is not a valid file!"
fi

extract_lzma() {
  echo "lzma -d <'$1\' >'${1%.lzma}'"
  lzma -d <"$1" >"${1%.lzma}"
}

run() {
  PROGRAMM="$1"
  FILE="$2"
  echo $PROGRAMM "'$FILE'"
  $PROGRAMM "$FILE"
}

case "$FILE" in
  *.tar.bz2 | *.tbz2) run "tar xvjf" "$FILE" ;;
  *.tar.xz) run "tar xvJf" "$FILE" ;;
  *.tar.gz | *.tgz) run "tar xvzf" "$FILE" ;;
  *.tar.zst) run "tar --use-compress-program=unzstd -xvf" "$FILE" ;;
  *.zst) run "unzstd" "$FILE" ;;
  *.bz2) run "bunzip2" "$FILE" ;;
  *.rar) run "unrar x" "$FILE" ;;
  *.gz) run "gunzip" "$FILE" ;;
  *.tar) run "tar xvf" "$FILE" ;;
  *.zip) run "unzip" "$FILE" ;;
  *.xz) run "unxz" "$FILE" ;;
  *.lzma) extract_lzma "$FILE" ;;
  *.Z) run "uncompress" "$FILE" ;;
  *.7z) run "7z x" "$FILE" ;;
  *)
    error "don't know how to extract '$FILE'..."
    ;;
esac

exit 0
