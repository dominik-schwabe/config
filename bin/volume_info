#!/usr/bin/bash

OUTPUT=$(pamixer --list-sources | grep 'alsa_input' | cut -d" " -f1)
VOLUME_INFO=$(pamixer --get-volume --get-mute)
[[ $? != 0 ]] && exit 1
for SOURCE in $OUTPUT; do
  VOLUME_INFO="$VOLUME_INFO $(pamixer --source $SOURCE --get-mute)"
  [[ $? != 0 ]] && exit 1
done
echo $VOLUME_INFO
