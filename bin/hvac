#!/usr/bin/env python3

import argparse
import httpx
from sys import stderr
import json

BASE = "http://dominiks-hvac:80"

parser = argparse.ArgumentParser()
parser.add_argument("speed", type=int, nargs="?")
args = parser.parse_args()

speed = args.speed
try:
    if speed is not None:
        response = httpx.post(f"{BASE}/pwm", json={"percent": speed})
        print(response.status_code, response.text.strip())
    else:
        response = httpx.get(f"{BASE}/info")
        print(json.dumps(response.json()))
except httpx.ConnectError:
    print(f"{BASE} is unreachable", file=stderr)
    exit(1)
