alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

alias grep='grep -i --color=auto'
alias fgrep='fgrep -i --color=auto'
alias egrep='egrep -i --color=auto'
alias fzf='fzf --color=16'
alias less='less -i'
alias tmux='tmux -u'

alias ip='ip -color'

alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

alias vim='/usr/bin/nvim'
alias pvim='pipenv --venv > /dev/null && pipenv run nvim'
alias oldvim='/usr/bin/vim'

alias python='python3'
alias p='ipython'
alias pip='pip3'

alias services-enabled='systemctl --type service --state enabled list-unit-files'
alias services-disabled='systemctl --type service --state disabled list-unit-files'

alias ta='tmux attach -t'
alias tad='tmux attach -d -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'
alias tksv='tmux kill-server'
alias tkss='tmux kill-session -t'

alias R='R --no-save'
alias dockerstart='sudo systemctl start docker.service'
alias dockerstop='sudo systemctl stop docker.service'

alias tt='termdown --no-figlet -s -a'
alias ssh='ssh -x -C'


