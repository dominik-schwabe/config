alias ls='ls --color=auto'

alias grep='grep -i --color=auto'
alias fgrep='fgrep -i --color=auto'
alias egrep='egrep -i --color=auto'
alias fzf='fzf --color=16'
alias less='less -i'
alias tmux='tmux -u'

alias diff='diff --color=auto'

alias pgrep+='pgrep -iaf'
alias pkill='pkill -if'
alias rg='rg -i'

alias ip='ip -color=auto'

alias ls='ls --color=tty'
alias lr="find -type f -exec basename {} \;"
alias l='ls -lAthr'
alias ll='ls -lAh'

alias d='mkdir -p ~/.lucid && vim ~/.lucid/$(date -I).md'
alias vim='nvim'
alias novim='nvim -u NONE --cmd "au VimEnter * windo set nowrap number norelativenumber signcolumn=no | noremap Q :qa<cr> | noremap gw <CMD>write<CR>"'
alias prvim='vim --cmd "au VimEnter * windo set scrollbind cursorbind number norelativenumber signcolumn=no nomodifiable | noremap Q :qa<cr>" -O'
alias ovim='/bin/vim'
alias benchmark-nvim='rm -f /tmp/nvim-startuptime && nvim --startuptime /tmp/nvim-startuptime -c ":e /tmp/nvim-startuptime"'

alias p='ipython'

alias services-enabled='systemctl --type service --state enabled list-unit-files'
alias services-disabled='systemctl --type service --state disabled list-unit-files'

alias t='tmux attach -t 0 &>/dev/null || tmux new-session -t 0'
alias tt='tmux attach -t 1 &>/dev/null || tmux new-session -t 1'
alias ttt='tmux attach -t 2 &>/dev/null || tmux new-session -t 2'
alias ta='tmux attach -t'
alias tad='tmux attach -d -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'
alias tksv='tmux kill-server'
alias tkss='tmux kill-session -t'

alias R='R --no-save'
alias dst='sudo systemctl start docker.service'
alias dsp='sudo systemctl stop docker.socket'

alias assh='eval $(keychain --eval --quiet id_rsa)'

alias ssh='TERM=xterm-256color ssh -CA'
alias xssh='ssh -XCA'
alias lssh='ssh -Aq -L 3000:localhost:3000 -L 5000:localhost:5000'

alias broken_packages='sudo LC_ALL=C pacman -Qk 2>&1 | grep -E ", [1-9][0-9]* missing files" | cut -d':' -f1'
alias broken_packages_explicit='sudo LC_ALL=C pacman -Qek 2>&1 | grep -E ", [1-9][0-9]* missing files" | cut -d':' -f1'

alias pyl='[ "$ASDF_PYTHON_VERSION" = "system" ] && if [ -z "$_ASDF_PYTHON_VERSION" ]; then unset ASDF_PYTHON_VERSION; else export ASDF_PYTHON_VERSION=$_ASDF_PYTHON_VERSION; unset _ASDF_PYTHON_VERSION; fi'
alias pys='[ "$ASDF_TURBO" != "true" ] && [ "$ASDF_PYTHON_VERSION" != "system" ] && { _ASDF_PYTHON_VERSION=$ASDF_PYTHON_VERSION; export ASDF_PYTHON_VERSION=system; }'
alias pythonserver='python -m http.server 8000'
alias ppjson='python -m json.tool'

alias install_zsh='curl -fsSL https://raw.githubusercontent.com/romkatv/zsh-bin/master/install | sh'
alias install_treesitter='cargo install --git https://github.com/tree-sitter/tree-sitter.git'
alias install_trans='curl --create-dirs -sfLo ~/bin/trans https://git.io/trans && chmod 755 ~/bin/trans'
alias install_chtsh='curl --create-dirs -sfLo ~/bin/cht.sh https://cht.sh/:cht.sh && chmod 755 ~/bin/cht.sh'
alias install_tldr='npm install -g tldr'
alias install_rust="curl --proto '=https' --tlsv1.2 https://sh.rustup.rs -sSf | sh -s -- -y --no-modify-path"
alias te='translate de:en'
alias td='translate en:de'
alias rs='asdf reshim'
alias e='extract'
alias pr='pr -i" " -n -c -m -t -S" | " -w $(($(tput cols) - 2))'
alias ytdl='yt-dlp --extract-audio --audio-format m4a --format best'
alias my='mpv --ytdl-format="ytdl-format=bestvideo[height<=720]+bestaudio/best[height<=720]" &>/dev/null'

alias prj='pyr jupyter lab --no-browser'
alias pv='PIPENV_VENV_IN_PROJECT=1 pipenv'

alias pipu='pip install -U --upgrade-strategy eager'

alias amount='udiskie'
alias curl='curl -fsSL'
alias top='bpytop'
alias otop='/usr/bin/env top'

alias a='vim ~/.config/awesome/rc.lua'
alias v='vim ~/.config/nvim/init.lua'

alias grhs='git reset --soft HEAD^'

alias thesis='track --start-date 01.04.2022 --end-date 01.10.2022 --hours 900 thesis'
alias work='track work'

alias whatismyip='curl ifconfig.me'
alias whereami='curl https://ipinfo.io/loc'

alias sst='(sinfo -S "%n" -O nodehost:12,memory:8,freemem:10,allocmem:11,cpusstate:15,socketcorethread:10 \
&& echo && sinfo -S "%n" -O nodehost:12,statecompact:7,gres:30,gresused:50,reason:50 \
&& echo && squeue -S i -o "%5i %12u %20j %5C %10m %8T %5D %11l %11L %R")'
alias sqc='squeue -S i -o "%5i %10u %5C %10m %o"'

#command -v rlwrap && alias node='NODE_NO_READLINE=1 rlwrap node'

[[ -f ~/.kubectl.alias ]] && source ~/.kubectl.alias
[[ -f ~/.docker.alias ]] && source ~/.docker.alias
[[ -f ~/.git.alias ]] && source ~/.git.alias


